<% layout("layouts/boilerplate") -%>

<div class="container py-5">
  <!-- Listing Title -->
  <div class="row mb-4">
    <div class="col text-center">
      <h2 class="fw-bold" style="color: #ff385c;"><%= listing.title %></h2>
    </div>
  </div>

  <!-- Listing Image & Details -->
  <div class="row justify-content-center mb-5">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-lg rounded-4 border-0">
        <img src="<%= listing.image.url %>" class="card-img-top rounded-top" alt="listing_image" style="object-fit: cover; height: 400px;">
        <div class="card-body">
          <p class="text-muted mb-1">Owner: <i><%= listing.owner.username %></i></p>
          <p class="mb-1"><strong>Description:</strong> <%= listing.description %></p>
          <p class="mb-1"><strong>Location:</strong> <%= listing.location %>, <%= listing.country %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Owner Actions -->
  <% if(currUser && listing.owner._id.equals(currUser._id)){ %>
    <div class="row mb-5 justify-content-center">
      <div class="col-auto">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark px-4 py-2 rounded-pill me-3">Edit</a>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" class="d-inline">
          <button class="btn btn-dark px-4 py-2 rounded-pill">Delete</button>
        </form>
      </div>
    </div>
  <% } %>

  <!-- Reserve Section for non-owners -->
  <% if(currUser && !listing.owner._id.equals(currUser._id)){ %>
<div class="row justify-content-center mb-5">
  <div class="col-md-4">
    <div class="card p-4 shadow-sm rounded-4 text-center">
      <h4 class="fw-bold mb-3">&#8377; <%= listing.price.toLocaleString("en-IN") %></h4>
      <span class="text-muted mb-3 d-block">for 1 night</span>
      
      <!-- Booking Form -->
      <form action="/listings/<%= listing._id %>/book" method="POST" class="text-start">
        <div class="mb-3">
          <label for="checkin" class="form-label fw-semibold">Check-in</label>
          <input type="date" name="checkin" id="checkin" class="form-control rounded-3 shadow-sm" required>
          <div class="invalid-feedback">Please select a check-in date</div>
        </div>
        
        <div class="mb-3">
          <label for="checkout" class="form-label fw-semibold">Check-out</label>
          <input type="date" name="checkout" id="checkout" class="form-control rounded-3 shadow-sm" required>
          <div class="invalid-feedback">Please select a check-out date</div>
        </div>

        <p id="bookingStatus" class="text-danger fw-semibold text-center d-none">
  Already booked for selected dates
</p>

<button id="reserveBtn" type="submit"
  class="btn w-100 text-white fw-semibold mt-3"
  style="background: linear-gradient(90deg, #ff385c, #ff4d6d); border-radius: 25px;">
  Continue to Payment
</button>

      </form>

      <p class="text-center text-muted mt-2 mb-0" style="font-size: 0.9rem;">
        You will be redirected to secure payment
      </p>
    </div>
  </div>
</div>
<% } %>


  <!-- Reviews Section -->
  <div class="row justify-content-center mb-5">
    <div class="col-lg-8 col-md-10">
      <% if(currUser){ %>
        <div class="card shadow-sm rounded-4 p-4 mb-4">
          <h5 class="fw-bold mb-3">Leave a Review</h5>
          <form action="/listings/<%= listing.id%>/reviews" method="POST" novalidate class="needs-validation">
            
            <!-- Rating -->
            <div class="mb-3">
              <label for="rating" class="form-label fw-semibold">Rating</label>
              <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>

            <!-- Comment -->
            <div class="mb-3">
              <label for="comment" class="form-label fw-semibold">Comments</label>
              <textarea name="review[comment]" id="comment" cols="30" rows="4" class="form-control rounded-3 shadow-sm" required></textarea>
              <div class="invalid-feedback">Please enter a comment</div>
            </div>

            <button type="submit" class="btn btn-dark rounded-pill px-4 py-2">Submit</button>
          </form>
        </div>
      <% } %>

      <!-- Display Reviews -->
      <div class="row">
        <% for(let review of listing.reviews){ %>
          <div class="col-md-6 mb-3">
            <div class="card shadow-sm rounded-4 p-3 h-100">
              <h6 class="fw-bold"><%= review.author.username %></h6>
              <p class="mb-1"><%= review.comment %></p>
              <p class="text-warning mb-2">
                ‚≠ê <%= review.rating %> / 5
              </p>
              <% if(currUser && review.author._id.equals(currUser._id)){ %>
                <form method="POST" action="/listings/<%=listing._id %>/reviews/<%=review._id%>?_method=DELETE">
                  <button class="btn btn-sm btn-dark">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #fff9f9;
  }

  .card {
    background-color: #ffffff;
  }

  label {
    color: #444;
  }

  .show-img {
    object-fit: cover;
  }

  button:hover {
    opacity: 0.9;
    transition: 0.3s;
  }
</style>

<script>
  
  // Bootstrap validation
  (function () {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(function(form){
      form.addEventListener('submit', function(event){
        if(!form.checkValidity()){
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();

  const bookings = JSON.parse('<%- JSON.stringify(bookings || []) %>');

  const checkinInput = document.getElementById("checkin");
  const checkoutInput = document.getElementById("checkout");
  const reserveBtn = document.getElementById("reserveBtn");
  const bookingStatus = document.getElementById("bookingStatus");

  function hasConflict(checkin, checkout) {
    const ci = new Date(checkin);
    const co = new Date(checkout);

    return bookings.some(b => {
      const bs = new Date(b.checkin);
      const be = new Date(b.checkout);
      return ci < be && co > bs;
    });
  }

  function validateBooking() {
    if (!checkinInput.value || !checkoutInput.value) return;

    if (hasConflict(checkinInput.value, checkoutInput.value)) {
      reserveBtn.style.display = "none";
      bookingStatus.classList.remove("d-none");
    } else {
      reserveBtn.style.display = "block";
      bookingStatus.classList.add("d-none");
    }
  }

  if (checkinInput && checkoutInput) {
    checkinInput.addEventListener("change", validateBooking);
    checkoutInput.addEventListener("change", validateBooking);
  }





  

</script>
